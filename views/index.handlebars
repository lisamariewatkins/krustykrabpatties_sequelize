<div id='main'>
<div class="row">
	<div  class="col-md-6">
		<h2>Eat a patty!</h2>
		<ul>
			{{#each burgers}}
			{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

				<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured" value="true">
				<button type="submit">DEVOUR IT!!!</button>
				</form>

			</li>
			{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class="col-md-6">
		<h2>Patties you have eaten!</h2>
		<ul>
			{{#each burgers}}
			{{#if this.devoured}}
			<li>
				{{this.burger_name}}

				<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured" value="false">
				<button type="submit">No wait nevermind!!!</button>
				</form>
			</li>
			{{/if}}
			{{/each}}
		</ul>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h2>Add a patty</h2>
		<form class="create-update-form" action="burgers/create" method="POST">

		<div class="form-group">
		<label for="ca">Burger Name:</label>
		<input type="text" id="ca" name="burger_name">
		</div>

		<div class="form-group">
		<label for="devoured">Devoured?</label><br>
		<input type="radio" name="devoured" value="1" checked> Devoured!<br>
		<input type="radio" name="devoured" value="0"> Not devoured!
		</div>

		<button type="submit">Add Burger</button>
		</form>
	</div>
</div>
</div>
